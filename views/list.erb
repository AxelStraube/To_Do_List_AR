<h1><%= @list.name() %></h1>


<% @tasks.not_done().each() do |task| %>
  <li><%= task.description %> <a href="/tasks/<%= task.id() %>/edit">Update this task's description</a><form action="/tasks_done/<%= task.id() %>" method="post"><input name="_method" type="hidden" value="patch"><button type="submit">Done!</button></form></li>

<% end %>

<form action="/tasks" method="post">
  <input id="list_id" name="list_id" type="hidden" value="<%= @list.id() %>">
  <label for="description">Enter a description of your task:</label>
  <input id="description" name="description" type="text">

  <button type="submit">Add task</button>
</form>

<a href="/">HOME</a>
